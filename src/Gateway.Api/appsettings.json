{
  "Logging": { "LogLevel": { "Default": "Information", "Microsoft.AspNetCore": "Warning" } },
  "AllowedHosts": "*",

  "Kestrel": { "Endpoints": { "Http": { "Url": "http://0.0.0.0:8080" } } },

  "ReverseProxy": {
    "Routes": {
      "users-swagger": {
        "ClusterId": "users",
        "Order": 0,
        "Match": { "Path": "/users/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/users" } ]
      },
      "events-swagger": {
        "ClusterId": "events",
        "Order": 0,
        "Match": { "Path": "/events/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/events" } ]
      },

      "users-route": {
        "ClusterId": "users",
        "Order": 10,
        "Match": { "Path": "/users/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/users" } ]
      },
      "events-route": {
        "ClusterId": "events",
        "Order": 10,
        "Match": { "Path": "/events/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/events" } ]
      }
    },

    "Clusters": {
      "users": { "Destinations": { "u1": { "Address": "http://userservice" } } },
      "events": { "Destinations": { "e1": { "Address": "http://eventservice:5000" } } }
    }
  }
}
